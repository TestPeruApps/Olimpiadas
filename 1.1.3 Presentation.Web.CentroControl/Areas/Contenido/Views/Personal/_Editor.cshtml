@model Olimpiadas.Web.CMS.Areas.Contenido.ViewModels.Personal.PersonalEditorViewModel

@{
    var nonce = Context.Items["csp-nonce"].ToString();
}
<form id="personalEditorForm" action="/" class="form-horizontal" autocomplete="off" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input asp-for="Personal.IdPersonal" type="hidden" />
    <div class="form-group">
        <label asp-for="Personal.NombrePersonal" class="col-sm-2 control-label">Nombre :</label>
        <div class="col-sm-8">
            <input asp-for="Personal.NombrePersonal" maxlength="500" required="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Personal.DniPersonal" class="col-sm-2 control-label">DNI :</label>
        <div class="col-sm-3">
            <input asp-for="Personal.DniPersonal" maxlength="8" required="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Activo :</label>
        <div class="col-sm-10">
            <div>
                @Html.CheckBox("Personal.Activo", Model.Personal.Activo.GetValueOrDefault(false))
            </div>
        </div>
    </div>
</form>

<script nonce="@nonce">
    $(document).ready(function () {
        formPersonal.editor.load();
    });
</script>